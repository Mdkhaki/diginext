{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "common/*": [
        "src/common/*"
      ],
      "modules/*": [
        "src/modules/*"
      ],
      "shared/*": [
        "src/shared/*"
      ],
      "services/*": [
        "src/shared/services/*"
      ],
      "models/*": [
        "src/shared/models/*"
      ],
      "components/*": [
        "src/shared/components/*"
      ],
      "pages/*": [
        "pages/*"
      ],
      "resources/*": [
        "resources/*"
      ],
      "mocks/*": [
        "mocks/*"
      ],
      "locales/*": [
        "public/locales/*"
      ],
    },
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}